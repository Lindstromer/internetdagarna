{
    "name": "elseif/internetdagarna",
    "description": "Automatisk hantering f√∂r WordPress-projekt",
    "type": "project",
    "version": "1.0",
    "license": "MIT",
    "authors": [
        {
            "name": "Andreas Ek",
            "email": "andreas@elseif.se"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://wpackagist.org"
        }
    ],
    "require": {
        "composer/installers": "^1.2",
        "johnpbloch/wordpress": "^4.6",
        "vlucas/phpdotenv": "^2.4",
        "wp-cli/wp-cli": "^0.25.0",
        "wpackagist-theme/twentysixteen": "^1.3",
        "wpackagist-plugin/ilmenite-cookie-consent": "^1.1"
    },
    "require-dev": {
        "symfony/console": "~2",
        "symfony/debug": "~2",
        "symfony/finder": "~2",
        "symfony/process": "~2",
        "symfony/yaml": "~2",
        "deployer/deployer":"~4",
        "laravel/homestead": "^3.0",
        "phpunit/phpunit": "^5.6",
        "phpcasperjs/phpcasperjs": "^1.2"
    },
    "extra": {
        "installer-paths": {
            "public/wp-content/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
            "public/wp-content/plugins/{$name}/": ["type:wordpress-plugin"],
            "public/wp-content/themes/{$name}/": ["type:wordpress-theme"]
        },
        "wordpress-install-dir": "public/wp"
    }
}
